<%= form_for(@blog) do |f| %>
    <!-- Error handler -->
    <% if @blog.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

          <ul>
            <% @blog.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="control-group">
      <div class="controls">
        <div class="input-append">
          <%= f.text_field :name, :class => "input-block-level", :placeholder => "Zombie Ninjas Blog", style:"width:700px" %>
        </div>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <div class="input-append">
          <%= f.text_field :path, :class => "input-block-level", :placeholder => "/Users/yasith/source/octopress_test", style:"width:700px" %>
        </div>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <%= f.submit %>
      </div>
    </div>

<% end %>